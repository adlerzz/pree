<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintBottom_toTopOf="@+id/group_pitch"
        />


    <Button
        android:id="@+id/button"
        android:layout_width="231dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/group_pitch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/group_kamp">

        <TextView
            android:id="@+id/lab_pitch"
            android:text="@string/pitch"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"/>

        <SeekBar
            android:id="@+id/tr_pitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:min="-1000"
            android:progress="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_kamp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/group_lim">

        <TextView
            android:id="@+id/lab_kamp"
            android:text="@string/kamp"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"/>

        <SeekBar
            android:id="@+id/tr_kamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="9800"
            android:min="800"
            android:progress="1000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_lim"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/group_cut_h">

        <TextView
            android:id="@+id/lab_lim"
            android:text="@string/lim"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"/>

        <SeekBar
            android:id="@+id/tr_lim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:min="10"
            android:progress="800" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_cut_h"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/group_cut_l">

        <TextView
            android:id="@+id/lab_cut_h"
            android:text="@string/cut_h"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"/>

        <SeekBar
            android:id="@+id/tr_cut_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:min="0"
            android:progress="500" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_cut_l"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/group_qu">

        <TextView
            android:id="@+id/lab_cut_l"
            android:text="@string/cut_l"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"/>

        <SeekBar
            android:id="@+id/tr_cut_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:min="0"
            android:progress="500" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_qu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button">

        <TextView
            android:id="@+id/lab_qu"
            android:text="@string/qu"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"/>

        <SeekBar
            android:id="@+id/tr_qu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:min="0"
            android:progress="0" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>